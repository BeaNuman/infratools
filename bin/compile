#!/usr/bin/env bash

BUILD_DIR=$1
BP_DIR=$(cd "$(dirname "${0:-}")"; cd ..; pwd)

mkdir -p "$BUILD_DIR/.profile.d"

cp "$BP_DIR"/scripts/fetch_vault_credentials.sh "$BUILD_DIR/.profile.d/"
cp "$BP_DIR"/scripts/fetch_vault_credentials.py "$BUILD_DIR/.profile.d/"

cp "$BP_DIR/scripts/fetch_vault_credentials.sh" "$BUILD_DIR/export"
cp "$BP_DIR/scripts/fetch_vault_credentials.py" "$BUILD_DIR"
